      id="myMap"
      style="width: 100%; height: 100vh;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      polyline="{{polyline}}"
      circles="{{circles}}"
      show-location
    >
      <cover-view class='tomysite' bindtap="moveToLocation">
        <cover-image class="siteimg" src='../../images/map/mysite.png' />
      </cover-view>  
    </map>
  </view>
